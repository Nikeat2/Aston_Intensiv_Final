<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".presentation.sources.presentation.NewsBySourceFragment">

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/topToolBar"
       android:layout_width="match_parent"
       android:layout_height="64dp"
       android:background="@color/background_color"
       android:paddingStart="4dp"
       android:paddingTop="8dp"
       android:paddingEnd="4dp"
       android:paddingBottom="8dp"
       android:titleMarginStart="150dp"
       android:titleTextColor="#FBFCFE">

      <ImageButton
          android:visibility="gone"
          android:id="@+id/arrowBackButton"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="start"
          android:backgroundTint="@color/background_color"
          android:contentDescription="@string/app_name"
          android:src="@drawable/arrow_back_icon" />

      <EditText
          android:layout_gravity="center"
          android:hint="Search..."
          android:visibility="gone"
          android:textSize="22sp"
          android:background="@color/background_color"
          android:id="@+id/editTextForSearching"
          android:layout_width="wrap_content"
          android:layout_height="50dp" />

   <TextView
       android:id="@+id/titleTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:textAppearance="@style/Theme.AppCompat.NoActionBar"
       android:textColor="@android:color/white"
       android:textSize="22sp" />

   <ImageButton
       android:id="@+id/filterButton"
       android:layout_width="48dp"
       android:layout_height="48dp"
       android:layout_gravity="end"
       android:backgroundTint="@color/background_color"
       android:contentDescription="@string/app_name"
       android:src="@drawable/filter_icon" />

   <ImageButton
       android:id="@+id/searchButton"
       android:layout_width="48dp"
       android:layout_height="48dp"
       android:layout_gravity="end"
       android:layout_marginEnd="6dp"
       android:backgroundTint="@color/background_color"
       android:contentDescription="@string/app_name"
       android:src="@drawable/search_icon" />

   </androidx.appcompat.widget.Toolbar>

   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:id="@+id/swipeRefreshLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

   <androidx.recyclerview.widget.RecyclerView
       tools:listitem="@layout/headlines_recycler_view_item_layout"
       android:id="@+id/newsBySourceRecyclerView"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />

   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>